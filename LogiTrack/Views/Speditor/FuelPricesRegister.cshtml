@model LogiTrack.Core.ViewModels.FuelPrice.FilterFuelPricesViewModel
@{
    ViewData["Title"] = "Fuel Prices Register";
    Layout = "~/Views/Shared/_SpeditorLayout.cshtml";
}


<div class="container mt-5">
    <div class="search-header">
        <div class="search-icon">
            <i class="bi bi-search" style="font-size: 35px; color:#00aa87;"></i>
        </div>
        <h2 class="quick-search-title">Fuel prices register</h2>
    </div>
    <p class="search-description">Please enter your search criteria</p>

    <form asp-action="FuelPricesRegister" asp-action="Speditor" method="get" class="search-form">
        <div class="row">

            <div class="form-group">
                <label asp-for="StartDate"><b>Start</b></label>
                <input type="text" id="MaxWeightCapacity" asp-for="StartDate" class="flatpickr" placeholder="Please enter">
            </div>
            <div class="form-group">
                <label asp-for="EndDate"><b>End</b></label>
                <input type="text" id="MinVolume" asp-for="EndDate" class="flatpickr" placeholder="Please enter">
            </div>
            <div class="form-group">
                <label asp-for="MinPrice"><b>Min price</b></label>
                <input type="text" id="MinVolume" asp-for="MinPrice" class="flatpickr" placeholder="Please enter">
            </div>
            <div class="form-group">
                <label asp-for="MaxPrice"><b>Max price</b></label>
                <input type="text" id="MinVolume" asp-for="MaxPrice" class="flatpickr" placeholder="Please enter">
            </div>

        </div>
        <div class="button-group">
            <button type="submit" class="btn"><b>GO</b></button>
            <a asp-action="FuelPricesRegister" asp-action="Speditor" type="reset" class=" btn-clear"><b>CLEAR</b></a>
        </div>
    </form>
</div>

<div class="filtered-deliveries-container">
    <div class="delivery-header">
        <span>Date</span>
        <span>Type</span>
        <span>Price</span>
    </div>
    @if (Model.FuelPrices.Any())
    {
        <div class="delivery-list">
            @foreach (var price in Model.FuelPrices)
            {
                <div class="delivery-card">
                    <div class="delivery-info">
                        <span>@price.Date</span>
                        <span>@price.Type</span>
                        <span>@price.Price</span>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="no-found">No fuel prices found matching the search criteria.</p>
    }
</div>
<style>

    .row {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 15px;
    }

    .form-group {
        flex: 1 1 33%;
        margin-bottom: 10px;
    }

        .form-group:last-child {
            margin-right: 0;
        }


    input[type="text"] {
        width: 70%;
        border: none;
        border-bottom: 1px solid grey;
        padding: 8px 0;
        margin-bottom: 15px;
    }



    .button-group {
        display: flex;
        margin-top: 105px;
        flex-direction: row;
        margin-bottom: 30px;
        gap: 7px;
    }


    .delivery-header {
        display: flex;
        justify-content: space-between;
        background-color: #ffffff;
        padding: 30px;
        font-weight: bold;
        font-size: 0.90rem;
        width: 90%;
    }

    .delivery-card {
        background-color: white;
        font-size: 0.80rem;
        display: flex;
        flex-direction: column;
        transition: background-color 0.3s ease;
        position: relative;
        overflow: hidden;
    }

        .delivery-card:nth-child(even) {
            background-color: #F5F5F7;
        }


    .delivery-metrics {
        display: none;
        margin-top: 10px;
        background-color: #f1f8ff;
        width: 100%;
        transition: background-color 0.3s ease;
    }

        .delivery-metrics p {
            margin-left: 210px;
        }

</style>


