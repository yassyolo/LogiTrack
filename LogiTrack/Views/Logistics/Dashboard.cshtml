            margin: 0;
        }

    .delivery-tracking {
        display: flex;
        margin-top: 10px;
        flex-direction: row;
        margin-bottom: 15px;
    }

    .addresses {
        margin-left: 10px;
        font-size: 14px;
        width: 90%;
    }

    .road-icon {
        width: 35px;
        height: 35px;
        margin: 0 10px;
    }

