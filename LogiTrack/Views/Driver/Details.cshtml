@model LogiTrack.Core.ViewModels.Driver.DriverDetailsViewModel
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="~/js/site.js"></script>
    <style>
        .license-container {
            width: 400px;
            background-color: #ffffff;
            padding: 20px;
            margin: 0 auto;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            font-family: 'Poppins', sans-serif;
        }

        .license-title {
            font-size: 24px;
            font-weight: 700;
            color: #333;
            text-align: center;
            margin-bottom: 10px;
        }

        .divider-line {
            height: 1px;
            background-color: #e0e0e0;
            margin: 10px 0;
        }

        .general-details {
            font-size: 18px;
            color: #666;
            font-weight: 600;
            margin-bottom: 15px;
            text-align: center;
        }

        .license-row {
            display: flex;
            justify-content: space-between;
            font-size: 16px;
            color: #333;
            padding: 10px 0;
            border-bottom: 1px solid #e9f2ff;
        }

        .license-expiry {
            color: #ff4d4d;
            font-weight: bold;
            text-align: center;
            margin-top: 15px;
        }

        .license-ok {
            color: #4CAF50;
            font-weight: bold;
            text-align: center;
            margin-top: 15px;
        }
    </style>

</head>

<body>
    <header class="header">
        <div class="logo-name">
            <div class="company-logo">
                <img src="https://via.placeholder.com/50" alt="Company Logo">
            </div>
            <div class="company-name">LogiTrack</div>
        </div>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">
                <i class="bi bi-person-circle"></i>
                <span class="arrow">&#x25BC;</span>
            </button>
            <div class="profile-dropdown-menu" id="profileDropdown">
                <a asp-action="Details" asp-controller="Driver">Personal details</a>
                <a asp-action="LicenseDetails" asp-controller="Driver">License</a>
                <a asp-action="Logout" asp-controller="Home">Logout</a>
            </div>
        </div>
    </header>

    <aside class="sidebar">
        <ul>
            <li><a asp-action="Dashboard" asp-controller="Driver"><i class="bi bi-house-door"></i> Dashboard</a></li>
            <li>
                <a asp-action="SearchDelivery" asp-controller="Driver"><i class="bi bi-journal"></i> New Delivery</a>
            </li>
            <li>
                <a asp-action="SearchDeliveries" asp-controller="Driver"><i class="bi bi-truck"></i> Delivery <span class="arrow">></span></a>
                <div class="dropdown-menu">
                    <ul>
                        <li><a asp-action="SearchDeliveries" asp-controller="Driver">Search</a></li>
                        <li><a asp-action="NewDeliveries" asp-controller="Driver">Upcoming</a></li>
                    </ul>
                </div>
            </li>
        </ul>
    </aside>
    <div class="main-content">
        <div class="license-container">
            <div class="license-title">Driver Details</div>
            <div class="divider-line"></div>
            <div class="general-details">General Information</div>

            <div class="license-row">
                <span>Name:</span>
                <span>@Model.Name</span>
            </div>

            <div class="license-row">
                <span>Username:</span>
                <span>@Model.Username</span>
            </div>

            <div class="license-row">
                <span>Age:</span>
                <span>@Model.Age</span>
            </div>

            <div class="license-row">
                <span>Salary:</span>
                <span>$@Model.Salary / month</span>
            </div>

            <div class="license-row">
                <span>Experience:</span>
                <span>@Model.YearOfExperience years, @Model.MonthsOfExperience months</span>
            </div>

            <div class="license-row">
                <span>Preferences:</span>
                <span>@Model.Preferrences</span>
            </div>
        </div>
    </div>

</body>

</html>

