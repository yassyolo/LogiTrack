@model List<LogiTrack.Core.ViewModels.Notifications.NotificationViewModel>
@{
    if(User.IsInRole("Driver"))
    {
        Layout = "~/Views/Shared/_DriverLayout.cshtml";
    }
    else if(User.IsInRole("Speditor"))
    {
        Layout = "~/Views/Shared/_SpeditorLayout.cshtml";
    }
    else if (User.IsInRole("ClientCompany"))
    {
        Layout = "~/Views/Shared/_ClientsLayout.cshtml";
    }
    else if (User.IsInRole("LogisticsCompany"))
    {
        Layout = "~/Views/Shared/_LogisticsLayout.cshtml";
    }
    else if (User.IsInRole("Accountant"))
    {
        Layout = "~/Views/Shared/_AccountantLayout.cshtml";
    }
}

        <div class="company-container">
            <div class="company-title">Notifications</div>
            <div class="divider-line"></div>
            @foreach (var item in Model)
            {
                <div class="company-row">
                    <div class="notification-title">@item.Title</div>

                    <span>@item.Message</span>

                    <div class="date-btn">
                        <div class="column">
                            <span>@item.Date</span>
                        </div>
                        <div class="column">
                            <a asp-action="MarkAsRead" asp-controller="Home" asp-route-id="@item.Id" class="btn" style="text-decoration:none;">READ <i class="bi bi-bookmark-check"></i></a>
                        </div>
                    </div>

                </div>
                <div class="divider-line"></div>

            }
        </div>
<style>
    .company-container {
        width: 800px;
        background-color: #ffffff;
        box-shadow: 0 0 25px 1px #0000000f !important;
        display: block;
        padding: 10px;
    }

    .company-title {
        font-size: 23px;
        font-weight: 700;
        color: #000;
        margin-bottom: 10px;
        padding: 20px;
    }

    .divider-line {
        height: 1px;
        background-color: #e0e0e0;
        margin: 10px 0;
    }

    h4 {
        font-size: 18px;
        color: #00aa87;
        font-weight: 600;
        margin: 0;
    }

    .general-details {
        font-size: 18px;
        color: #00aa87;
        font-weight: 600;
        margin-bottom: 25px;
        margin-top: 10px;
    }

    .company-row {
        display: flex;
        flex-direction: column;
        margin-left: 20px;
    }

        .company-row:nth-of-type(2n) {
            background-color: #f9f9f9;
        }

    .date-btn {
        display: flex;
        flex-direction: row;
        margin-top: 30px;
        width: 80%;
        justify-content: space-between;
        margin-bottom: 10px;
    }

    .btn {
        background-color: #00aa87;
        width: 110px;
        height: 35px;
        color: white;
        border: none;
        border-radius: 3px;
        padding: 6px 9px;
        cursor: pointer;
        margin-left: 10px;
        box-shadow: 0 3px 1px -2px #0003, 0 2px 2px 0 #00000024, 0 1px 5px 0 #0000001f;
    }

        .btn:hover {
            opacity: 0.9;
        }

    .notification-title {
        margin-bottom: 30px;
        font-size: 20px;
        font-weight: 600;
        color: #00aa87;
    }
</style>


