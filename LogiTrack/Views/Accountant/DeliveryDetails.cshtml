@model LogiTrack.Core.ViewModels.Delivery.DeliveryForAccountantViewModel
@{
    Layout = null;
}

    <!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="~/js/site.js"></script>

    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .delivery-details-container {
            width: 85%;
        }

        .card {
            box-shadow: 0 0 25px 1px #0000000f !important;
            padding: 17px;
            background-color: white;
        }

        .details-header {
            display: flex;
            align-items: center;
            margin-bottom: 40px;
        }

            .details-header h2 {
                font-size: 19px;
                margin: 0;
            }

        .delivery-image {
            width: 50px;
            height: auto;
            margin-right: 20px;
        }

        h4 {
            margin: 10px 0;
        }

        .button-tabs {
            display: flex;
            border-bottom: 1px solid grey;
            margin-bottom: 15px;
        }

        .tab-button {
            padding: 10px 30px;
            border: none;
            cursor: pointer;
            display: inline-block;
            font-size: 15px;
            transition: background-color 0.3s;
            color: black;
            background-color: white;
        }

            .tab-button:focus,
            .tab-button:active {
                border-bottom: 2px solid #00aa87;
            }

        .btn {
            color: grey;
            border: none;
            cursor: pointer;
            margin: 0 5px;
            transition: background-color 0.3s;
        }

        .section {
            display: none;
            margin-left: 25px;
        }

            .section:not(.d-none) {
                display: block;
            }

        .vehicle-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .column {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

            .column h5 {
                margin-bottom: 10px;
            }

            .column p {
                margin: 5px 0;
                font-size: 14px;
                color: black;
                opacity: 80%;
            }

            .column strong {
                color: black;
            }

        .maps-container {
            display: flex;
            gap: 20px;
            margin-top: 20px;
        }

        .map {
            width: 90%;
            height: 200px;
            background-color: #e0e0e0;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .address-steps {
            display: flex;
            justify-content: space-between;
            flex-direction: row;
        }
        .delivery-steps {
            display: flex;
            align-items: center;
            gap: 30px;
        }

        .step-container {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .step-dot {
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background-color: gray;
        }

            .step-dot.completed {
                background-color: green;
            }

        .step-line {
            width: 3px;
            height: 50px;
            background-color: gray;
            margin: 0 auto;
        }

            .step-line.completed {
                background-color: green;
            }

        .step-text {
            text-align: center;
            margin-top: 8px;
        }

            .step-text img {
                width: 30px;
                height: 30px;
            }


        .vehicles-section-header, .column h4 {
            display: flex;
            margin-bottom: 20px;
            flex-direction: row;
        }

            .vehicles-section-header h4,
            .column h4, .metrics-header h4, .special-instructions h4,
             .metrics h4, .cash-register-title {
                font-size: 20px;
                color: #00aa87;
                font-weight: 500;
            }

        .metrics-header {
            display: flex;
            flex-direction: row;
            gap: 300px;
            margin-bottom: 20px;
        }

        .metrics {
            margin-top: 50px;
        }

        .standart-metrics-header-row {
            display: flex;
            flex-direction: row;
            margin-left: 60px;
            justify-content: space-between;
            width: 90%;
        }

        .standart-metrics-info-row {
            display: flex;
            flex-direction: row;
            background-color: #fbfbfb;
            margin-left: 40px;
            justify-content: space-between;
            white-space: nowrap;
            font-weight: 300;
            font-size: 14px;
            opacity: 80%;
            width: 90%;
        }

        .invoices, .cash-registers {
            margin-top: 20px;
        }
      
        h2 {
            font-size: 24px;
            margin: 0;
        }

        .file-icon {
            color: #007bff;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

            .file-icon i {
                font-size: 1.2em;
                margin-right: 5px;
            }

            .file-icon:hover {
                color: #0056b3;
            }


        .cash-register-title-button {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
            width: 85%;
        }

        .cash-register-title-button a{
            color:white;
            background-color: #00aa87;
            text-decoration: none;
            padding: 3px;
            border-radius: 5px;
        }
    </style>

</head>

<body>
    <header class="header">
        <div class="logo-name">
            <div class="company-logo">
                <img src="https://via.placeholder.com/50" alt="Company Logo">
            </div>
            <div class="company-name">LogiTrack</div>
        </div>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">
                <i class="bi bi-person-circle"></i>
                <span class="arrow">&#x25BC;</span>
            </button>
            <div class="profile-dropdown-menu" id="profileDropdown">
                <a asp-action="Logout" asp-controller="Home">Logout</a>
            </div>
        </div>
    </header>
    <aside class="sidebar">
        <ul>
            <li><a asp-action="Dashboard" asp-controller="Accountant"><i class="bi bi-house-door"></i> Dashboard</a></li>
            <li>
                <a asp-action="SearchDeliveries" asp-controller="Accountant"><i class="bi bi-truck"></i> Deliveries</a>
            </li>
            <li>
                <a asp-action="SearchCashRegisters" asp-controller="Accountant"><i class="bi bi-money"></i> Cash registers <span class="arrow">></span></a>
                <div class="dropdown-menu">
                    <ul>
                        <li><a asp-action="SearchDelivery" asp-controller="Accountant">New</a></li>
                        <li><a asp-action="SearchCashRegisters" asp-controller="Accountant">Search</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <a asp-action="SearchInvoices" asp-controller="Accountant"><i class="bi bi-money"></i> Invoices</a>
            </li>
        </ul>
    </aside>

    <div class="main-content">
        <div class="delivery-details-container">
            <div class="card">
                <div class="details-header">
                    <img src="https://via.placeholder.com/100" alt="Delivery Image" class="delivery-image">
                    <h2><b>@Model.ReferenceNumber</b></h2>
                </div>

                <div class="button-tabs">
                    <button class="tab-button" id="infoBtn">INFO</button>
                    <button class="tab-button" id="vehicleBtn">VEHICLE/DRIVER</button>
                    <button class="tab-button" id="statusBtn">STATUS</button>
                    <button class="tab-button" id="invoicesBtn">INVOICES</button>
                    <button class="tab-button" id="cashRegistersBtn">CASH REGISTERS</button>
                </div>

                <div id="infoSection" class="section">
                    <div class="column">
                        <h4><b>Client Information</b></h4>
                        <p><strong>Company Name:</strong> @Model.ClientCompanyName</p>
                        <p><strong>Address:</strong> @Model.ClientAddress</p>
                        <p><strong>Phone:</strong> @Model.ClientPhone</p>
                        <p><strong>Email:</strong> @Model.ClientEmail</p>
                    </div>
                </div>
                <div id="vehicleSection" class="section d-none">

                    <div class="vehicle-container">
                        <div class="column">
                            <h4><b>Vehicle</b></h4>
                            <p><strong>Type:</strong> @Model.VehicleType</p>
                            <p><strong>Registration:</strong> @Model.RegistrationNumber</p>
                        </div>

                        <div class="column">
                            <h4><b>Driver</b></h4>
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Age:</strong> @Model.Age</p>
                            <p><strong>Salary:</strong> @Model.Salary</p>
                            <p><strong>Experience:</strong> @Model.YearOfExperience years, @Model.MonthsOfExperience months</p>
                        </div>
                    </div>
                </div>

                <div id="statusSection" class="section d-none">
                    <div class="address-steps">
                        <div class="column-section">
                            <div class="column">
                                <h4><b>Origin</b></h4>
                                <p>@Model.PickupAddress</p>
                            </div>
                            <div class="column">
                                <h4><b>Destination</b></h4>
                                <p>@Model.DeliveryAddress</p>
                            </div>
                        </div>

                        <div class="delivery-steps">
                            @{
                                var steps = new[] { "Booked", "Collected", "In Transit", "Delivered" };
                                var currentStep = Model.DeliveryStep;
                            }

                            @for (int i = 0; i < steps.Length; i++)
                            {
                                var isCompleted = i + 1 <= currentStep;
                                var dotClass = isCompleted ? "step-dot completed" : "step-dot";
                                var lineClass = i < steps.Length - 1 ? (isCompleted ? "step-line completed" : "step-line") : "";

                                <div class="step-container">
                                    <div class="@dotClass"></div>
                                    @if (i < steps.Length - 1)
                                    {
                                        <div class="@lineClass"></div>
                                    }
                                    <p>@steps[i]</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div id="invoicesSection" class="section d-none invoices">
                    <div class="column">
                        <div class="cash-register-title-button">
                            <div class="cash-register-title">Invoices</div>
                            @if (!Model.Invoice.IsPaid)
                            {
                                <a asp-action="MarkAsPaid" asp-controller="Accountant" asp-route-id="@Model.Id" class="btn btn-primary">Mark as Paid</a>
                            }
                        </div>
                    </div>
                    <div class="standart-metrics-header-row">
                        <p><b>Number</b></p>
                        <p><b>Date</b></p>
                        <p><b>Description</b></p>
                        <p><b>Status</b></p>
                        <p><b>File</b></p>
                    </div>
                    <div class="standart-metrics-info-row">
                        <p>@Model.Invoice.Number</p>
                        <p>@Model.Invoice.Date</p>
                        <p>@Model.Invoice.Description</p>
                        <p>@Model.Invoice.IsPaid</p>
                        <p>
                            <a href="@Model.Invoice.FileUrl" target="_blank" class="file-icon" title="View or Download File">
                                <i class="fas fa-file-download"></i> See
                            </a>
                        </p>
                    </div>
                </div>

                <div id="cashRegistersSection" class="section d-none cash-registers">
                    <div class="cash-register-title-button">
                        <div class="cash-register-title"><b>Cash registers</b></div>
                        <a asp-action="AddCashRegister" asp-controller="Accountant" asp-route-id="@Model.Id" class="btn btn-primary">ADD</a>
                    </div>
                    <div class="standart-metrics-header-row">
                        <p><b>Date</b></p>
                        <p><b>Description</b></p>
                        <p><b>Type</b></p>
                        <p><b>Amount</b></p>
                        <p><b>File</b></p>
                    </div>
                    @foreach (var cashRegister in Model.CashRegisters)
                    {
                        <div class="standart-metrics-info-row">
                            <p>@cashRegister.DateSubmitted</p>
                            <p>@cashRegister.Description</p>
                            <p>@cashRegister.Type</p>
                            <p>@cashRegister.Amount</p>
                            <p>
                                <a href="@cashRegister.FileUrl" target="_blank" class="file-icon" title="View or Download File">
                                    <i class="fas fa-file-download"></i> See
                                </a>
                            </p>

                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

    <script>
        $(document).ready(function () {
            $('#infoBtn').click(function () {
                showSection('#infoSection');
            });
            $('#vehicleBtn').click(function () {
                showSection('#vehicleSection');
            });
            $('#statusBtn').click(function () {
                showSection('#statusSection');
            });
            $('#invoicesBtn').click(function () {
                showSection('#invoicesSection');
            });
            $('#cashRegistersBtn').click(function () {
                showSection('#cashRegistersSection');
            });

            function showSection(sectionId) {
                $('.section').addClass('d-none');
                $(sectionId).removeClass('d-none');
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>


</body>
</html>

