@model LogiTrack.Core.ViewModels.Accountant.SearchCashRegistersViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="~/js/site.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }

 

        .filtered-cash-registers-container {
            background-color: white;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 1110px;
            margin: auto;
        }

        .search-form {
            display: flex;
            gap: 20px;
            flex-direction: row;
        }

        .quick-search-header {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .search-icon {
            margin-right: 10px;
        }

        .quick-search-title {
            font-size: 24px;
            margin: 0;
        }

        .search-description {
            margin-bottom: 20px;
        }


        .row {
            display: flex;
            flex-wrap: wrap;
            margin-bottom: 15px;
        }

        .form-group {
            flex: 1 1 30%;
        }

            .form-group:last-child {
                margin-right: 0;
            }

        label {
            display: block;
            font-size: 14px;
            margin-bottom: 5px;
        }

        input[type="text"],
        input[type="date"] {
            width: 85%;
            border: none;
            border-bottom: 2px solid #007bff;
            padding: 8px 0;
            margin-bottom: 15px;
        }

            input[type="text"]:focus,
            input[type="date"]:focus {
                outline: none;
                border-bottom-color: #0056b3;
            }

        .button-group {
            display: flex;
            margin-top: 90px;
            flex-direction: row;
            margin-bottom: 30px;
            gap: 10px;
        }

        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 15px;
            cursor: pointer;
            margin-left: 10px;
        }

        .btn-clear {
            background-color: #6c757d;
        }

        .btn:hover {
            opacity: 0.9;
        }

        .btn-clear:hover {
            opacity: 0.8;
        }

        .filtered-cash-registers-container {
            background-color: #ffff;
            margin-top: 20px;
            box-shadow: 2px 3px 6px rgba(0, 0, 0, 0.1);
        }

        .cash-register-header {
            display: flex;
            justify-content: space-between;
            background-color: #ffffff;
            padding: 20px;
            font-weight: bold;
            margin-top: 35px;
            font-size: 0.90rem;
        }

        .cash-register-card {
            background-color: white;
            padding: 15px;
            font-size: 0.85rem;
            display: flex;
            justify-content: space-between;
            border-top: 1px solid #ddd;
        }

        .text-center {
            text-align: center;
            margin: 20px 0;
        }
    </style>

</head>

<body>
    <header class="header">
        <div class="logo-name">
            <div class="company-logo">
                <img src="https://via.placeholder.com/50" alt="Company Logo">
            </div>
            <div class="company-name">LogiTrack</div>
        </div>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">
                <i class="bi bi-person-circle"></i>
                <span class="arrow">&#x25BC;</span>
            </button>
            <div class="profile-dropdown-menu" id="profileDropdown">
                <a asp-action="Logout" asp-controller="Home">Logout</a>
            </div>
        </div>
    </header>
    <aside class="sidebar">
        <ul>
            <li><a asp-action="Dashboard" asp-controller="Accountant"><i class="bi bi-house-door"></i> Dashboard</a></li>
            <li>
                <a asp-action="SearchDeliveries" asp-controller="Accountant"><i class="bi bi-truck"></i> Deliveries</a>
            </li>
            <li>
                <a asp-action="SearchCashRegisters" asp-controller="Accountant"><i class="bi bi-money"></i> Cash registers <span class="arrow">></span></a>
                <div class="dropdown-menu">
                    <ul>
                        <li><a asp-action="SearchDelivery" asp-controller="Accountant">New cash register</a></li>
                        <li><a asp-action="SearchCashRegisters" asp-controller="Accountant">Search</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <a asp-action="SearchInvoices" asp-controller="Accountant"><i class="bi bi-money"></i> Invoices</a>
            </li>
        </ul>
    </aside>
    <div class="main-content">
        <div class="filtered-cash-registers-container mt-5">
            <div class="quick-search-header">
                <img src="https://via.placeholder.com/40" alt="Quick Search Icon" class="search-icon">
                <h2 class="quick-search-title">Quick Search</h2>
            </div>
            <p class="search-description">Please enter your search criteria:</p>

            <form asp-action="SearchCashRegisters" asp-controller="Accountant" method="get" class="search-form">
                <div class="row">
                <div class="form-group">
                    <label asp-for="CompanyName">Company Name</label>
                    <input type="text" id="CompanyName" asp-for="CompanyName" placeholder="Please enter">
                </div>
                <div class="form-group">
                    <label asp-for="DeliveryReferenceNumber">Delivery Reference No</label>
                    <input type="text" id="DeliveryReferenceNumber" asp-for="DeliveryReferenceNumber" placeholder="Please enter">
                </div>
                <div class="form-group">
                    <label asp-for="StartDate">Start Date</label>
                    <input type="date" id="StartDate" asp-for="StartDate" placeholder="Please enter">
                </div>
                <div class="form-group">
                    <label asp-for="EndDate">End Date</label>
                    <input type="date" id="EndDate" asp-for="EndDate">
                </div>
                <div class="form-group">
                    <label asp-for="SearchTerm">Search Term</label>
                    <input type="text" id="SearchTerm" asp-for="SearchTerm" placeholder="Enter keyword">
                </div>
            </div>
                <div class="button-group">
                    <button type="submit" class="btn">SEARCH</button>
                    <button type="reset" class="btn btn-clear">CLEAR</button>
                </div>
            </form>
        </div>
            <div class="filtered-cash-registers-container">
            <form asp-action="SearchDeliveries" asp-controller="Driver" method="get" class="search-form">
                <div class="form-group">
                    <label asp-for="SearchTerm">Quick Search by Keyword</label>
                    <input type="text" id="keyword" asp-for="SearchTerm" placeholder="Enter keyword">
                    <button type="submit" class="btn">GO</button>
                </div>
            </form>
                <div class="cash-register-header">
                    <span>date</span>
                    <span>Delivery Reference No</span>
                    <span>Type</span>
                    <span>Description</span>
                    <span>Amount</span>
                    
                </div>
                @if (Model.CashRegisters.Any())
                {
                    @foreach (var cashRegister in Model.CashRegisters)
                    {
                        <div class="cash-register-card">                          
                            <div class="cash-register-info">
                                <span>@cashRegister.DateSubmitted</span>
                                <span>@cashRegister.DeliveryReferenceNumber</span>
                                <span>@cashRegister.Type</span>
                                <span>@cashRegister.Description</span>
                                <span>@cashRegister.Amount</span>
                                
                            </div>
                        </div>
                    }
                    
                }
                else
                {
                    <p class="text-center">No cash registers found matching the search criteria.</p>
                }
            </div>
        
    </div>

</body>

</html>