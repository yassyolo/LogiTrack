@model LogiTrack.Core.ViewModels.Accountant.MarkAsPaidInvoiceViewModel
@{
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="~/js/site.js"></script>
    <style>       
        .confirmation-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f4f4f4;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .confirmation-message {
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        .confirmation-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
        }

        .btn {
            padding: 8px 15px;
            border: none;
            cursor: pointer;
            font-size: 1rem;
        }

        .btn-confirm {
            background-color: #4CAF50;
            color: white;
        }

        .btn-cancel {
            background-color: #f44336;
            color: white;
        }
    </style>

</head>

<body>
    <header class="header">
        <div class="logo-name">
            <div class="company-logo">
                <img src="https://via.placeholder.com/50" alt="Company Logo">
            </div>
            <div class="company-name">LogiTrack</div>
        </div>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">
                <i class="bi bi-person-circle"></i>
                <span class="arrow">&#x25BC;</span> 
            </button>
            <div class="profile-dropdown-menu" id="profileDropdown">
                <a asp-action="Logout" asp-controller="Home">Logout</a>
            </div>
        </div>
    </header>
    <aside class="sidebar">
        <ul>
            <li><a asp-action="Dashboard" asp-controller="Accountant"><i class="bi bi-house-door"></i> Dashboard</a></li>
            <li>
                <a asp-action="SearchDeliveries" asp-controller="Accountant"><i class="bi bi-truck"></i> Deliveries</a>
            </li>
            <li>
                <a asp-action="SearchCashRegisters" asp-controller="Accountant"><i class="bi bi-money"></i> Cash registers <span class="arrow">></span></a>
                <div class="dropdown-menu">
                    <ul>
                        <li><a asp-action="SearchDelivery" asp-controller="Accountant">New</a></li>
                        <li><a asp-action="SearchCashRegisters" asp-controller="Accountant">Search</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <a asp-action="SearchInvoices" asp-controller="Accountant"><i class="bi bi-money"></i> Invoices</a>
            </li>
        </ul>
    </aside>
    <div class="main-content">
        <div class="confirmation-container">
            <h2>Confirm Payment</h2>
            <p class="confirmation-message">
                Do you want to mark Invoice <strong>@Model.InvoiceNumber</strong> for client
                <strong>@Model.ClientName</strong> (Reg. Number: <strong>@Model.ClientRegistrationNumber</strong>)
                issued on <strong>@Model.InvoiceDate</strong> with amount <strong>@Model.Amount</strong> as paid?
            </p>

            <div class="confirmation-buttons">
                <form asp-action="MarkAsPaidSuccessful" asp-controller="Accountant" asp-route-id="@Model.InvoiceId" method="post">
                    
                    <button type="submit" class="btn btn-confirm">Yes, Mark as Paid</button>
                </form>
                <a asp-action="DeliveryDetails" asp-controller="Accountant" asp-route-id="@Model.DeliveryId" class="btn btn-cancel">Cancel</a>
            </div>
        </div>
    </div>

</body>

</html>
