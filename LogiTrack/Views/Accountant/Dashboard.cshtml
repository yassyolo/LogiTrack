@model LogiTrack.Core.ViewModels.Accountant.AccountantDashboardViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Driver Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <script src="~/js/site.js"></script>
    <style>       
        .cards-container {
            display: flex;
            gap:20px;
            margin-bottom: 20px;
        }

        .card {
            display: flex;
            align-items: center;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: calc((100% - 40px) / 3);
            padding: 10px;
            height: 90px; 
        }

        .card-icon {
            width: 100px;
            height: 70px; 
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .card-icon img {
                width: 50px; 
                height: auto;
            }

        .card-content {
            flex-grow: 1; 
            padding: 0 10px;
        }

        .card h3 {
            margin: 0;
            font-size: 1rem;
        }

        .card p {
            margin: 0;
            font-size: 0.85rem;
            color: #666;
        }

        .card-button {
            background-color: #1e87f0; 
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            font-size: 0.9rem;
        }

            .card-button:hover {
                background-color: #167ac4;
            }

        .diagrams {
            display: flex;
            gap: 20px;
        }

        .diagram {
            background-color: white;
            padding: 15px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            flex: 1;
            height: 480px;
        }

        .diagram-header {
            display: flex;
            gap:30px;
            align-items: center;
        }

        .see-all {
            text-decoration: underline;
            color: #1e87f0;
            font-size:0.9rem;
        }

        .delivery {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 10px;
        }

        .delivery-info {
            display: flex;
            align-items: center;
            font-size: 0.85rem; 
        }

            .delivery-info p {
                margin: 0; 
            }

            .delivery-info .ref-number {
                font-weight: bold;
            }

        .addresses {
            margin-left: 5px;
            font-size: 0.85rem;
        }

        .client-company {
            font-size: 0.85rem; 
        }

        .road-icon {
            width: 30px;
            height: 30px;
            margin: 0 10px;
        }

        .addresses {
            margin-left: 10px;
        }

        .pickup-address, .delivery-address {
            margin: 0;
        }

        .ref-num{
            text-decoration: none;
        }

        .paid-button {
            background-color: #28a745; 
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: default;
            font-size: 0.85rem;
        }

        .invoice-header, .invoice {
            display: grid;
            grid-template-columns: repeat(5, 1fr);
            gap: 50px;
font-size: 0.85rem;
        }

        .paid-button {
            background-color: #28a745; 
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: default;
            font-size: 0.85rem;
        }
    </style>

</head>

<body>
    <header class="header">
        <div class="logo-name">
            <div class="company-logo">
                <img src="https://via.placeholder.com/50" alt="Company Logo">
            </div>
            <div class="company-name">LogiTrack</div>
        </div>
        <div class="profile-dropdown">
            <button onclick="toggleDropdown()">
                <i class="bi bi-person-circle"></i>
                <span class="arrow">&#x25BC;</span> 
            </button>
            <div class="profile-dropdown-menu" id="profileDropdown">
                <a asp-action="Logout" asp-controller="Home">Logout</a>
            </div>
        </div>
    </header>
    <aside class="sidebar">
        <ul>
            <li><a asp-action="Dashboard" asp-controller="Accountant"><i class="bi bi-house-door"></i> Dashboard</a></li>
            <li>
                <a asp-action="SearchDeliveries" asp-controller="Accountant"><i class="bi bi-truck"></i> Deliveries</a>
            </li>
            <li>
                <a asp-action="SearchCashRegisters" asp-controller="Accountant"><i class="bi bi-money"></i> Cash registers <span class="arrow">></span></a>
                <div class="dropdown-menu">
                    <ul>
                        <li><a asp-action="SearchDelivery" asp-controller="Accountant">New</a></li>
                        <li><a asp-action="SearchCashRegisters" asp-controller="Accountant">Search</a></li>
                    </ul>
                </div>
            </li>
            <li>
                <a asp-action="SearchInvoices" asp-controller="Accountant"><i class="bi bi-money"></i> Invoices</a>
            </li>
        </ul>
    </aside>
    <div class="main-content">
        <div class="cards-container">
            <div class="card" id="locationCard">
                <div class="card-icon">
                    <img src="https://via.placeholder.com/50" alt="Location Icon">
                </div>
                <div class="card-content">
                   <h3>New deliveries</h3>
                   <p>@Model.NewFinishedDeliveriesFromLastWeek</p>
                </div>
                <p class="card-button">From last week</p>
            </div>
            <div class="card">
                <div class="card-icon">
                    <img src="https://via.placeholder.com/50" alt="Icon 1">
                </div>
                <div class="card-content">
                            <h3>Unpaid deliveries</h3>
                            <p>@Model.NotPaidDeliveriesCount</p>
                </div>
                <button class="card-button">See all</button>
            </div>
            <div class="card">
                <div class="card-icon">
                    <img src="https://via.placeholder.com/50" alt="Icon 2">
                </div>
                <div class="card-content">
                            <h3>Invoices</h3>
                            <p>@Model.InvoicesCountFromLastMonth</p>
                </div>
                <p class="card-button">From last month</p>
            </div>
            
        </div>
        <div class="diagrams">
            <div class="diagram">
                <div class="diagram-header">
                    <h3>Deliveries</h3>
                                <a asp-action="NewDeliveries" asp-controller="Accountant" class="see-all">See All</a>
                </div>
                 @foreach (var item in Model.Last5NewDeliveries)
                {
                    <div class="delivery">
                        <div class="delivery-info">
                            <a asp-action="DeliveryDetails" asp-asp-controller="Driver" asp-route-id="@item.Id"><b>@item.ReferenceNumber</b></a>
                            <img src="~/dashboard_books_dots.svg" alt="Road" class="road-icon">
                            <div class="addresses">
                                <p class="pickup-address"><b>@item.PickupAddress</b></p>
                                <p class="delivery-address"><b>@item.DeliveryAddress</b></p>
                            </div>
                        </div>
                        <p class="client-company"><b>@item.ClientCompanyName</b></p>
                        <button class="paid-button" style="display:@(item.IsPaid == true ? "inline-block" : "none")">Paid</button>
                    </div>
                }
                  </div>

                <div class="diagram">
                    <div class="diagram-header">
                        <h3>Invoices</h3>
                        <a asp-action="Invoices" asp-controller="Accountant" class="see-all">See All</a>
                        <h3>Due amount:</h3>
                        <p>@Model.DueAmountForDeliveries</p>
                    </div>
                    <div class="invoice-header">
                        <p><b>Invoice No</b></p>
                        <p><b>Current Date</b></p>
                        <p><b>Creation Date</b></p>
                        <p><b>Amount</b></p>
                    </div>
                    @foreach (var invoice in Model.Last5NotPaidInvoices)
                    {
                        <div class="invoice">
                            <p>@invoice.InvoiceNumber</p>
                            <p>@DateTime.Now.ToShortDateString()</p>
                            <p>@invoice.CreationDate</p>
                            <p>@invoice.Amount</p>                           
                        </div>
                    }
                </div>
        </div>
    </div>

</body>

</html>
